<style>
    body {
        height: 95%;
        background-image: url("/images/back.jpg");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .maincontainer {
        display: flex;
        justify-content: left;
        height: 90vh;
        width: 750px;
        padding-top: 60px;

    }

    .container {
        display: flex;
        justify-content: center;
        background-color: #fff;
        width: auto;
        height: auto;
        border-radius: 10px;
    }

    .containt {
        color: #34495e;
        font-size: 32px;
        font-weight: bold;
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        display: flex;
        justify-content: left;
        padding: 20px;
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .root {
        width: 400px;
        height: auto;
    }
</style>
<html>

<head>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />

</head>



<body>
    <div class="maincontainer">
        <div class="container">
            <div class="root">
                <form action="/admin/checkadminlogin" method="post">
                <div class="containt">
                    <span><img src="/images/favicon.png" width="150"></span> 
                </div>
                <div class="row">
                    <div class="col s12" style="display: flex; justify-content: center; ">
                        <span><img src="/images/login.png" width="100" alt="logo"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <i class="material-icons prefix">email</i>
                            <input id="icon_email" name="userid" type="text" class="validate">
                            <label for="icon_email">Email</label>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <i class="material-icons prefix">lock</i>
                            <input id="icon_password" name="password" type="password" class="validate">
                            <label for="icon_password">Password</label>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col s4" style="display: flex; justify-content:center;">

                        <button class="btn waves-effect waves-light" type="submit" name="login">login
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                    <div class="col s8" style="font-size: 20px;font-weight: bold;  display: flex; justify-content:center; color:red;">
                        <%=msg %> 
                     </div>   

                </div>

            </form>
            </div>
        </div>
    </div>


</body>
<!--JavaScript at end of body for optimized loading-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>


</html>